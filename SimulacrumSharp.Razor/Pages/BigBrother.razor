@inject ISimulationProvider _simulationProvider

@page "/bigbrother"

<h1>Big Brother Simulator</h1>

<p>Welcome to the Big Brother simulator!</p>

<button class="btn btn-primary" @onclick="SimulateSeason">HouseGuests to the backyard!</button>

<p>@result</p>

@code {
    private string result = string.Empty;

    private void SimulateSeason()
    {
        result = _simulationProvider.GetSimulation<BigBrotherSeason>(new SimulationRequest<BigBrotherSeason>());
    }
}
