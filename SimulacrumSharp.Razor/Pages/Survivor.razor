@inject ISimulationService<SurvivorSeason> _simulationService

@page "/survivor"
<h1>Survivor Simulator</h1>

<p>Welcome to the Survivor simulator!</p>

<button class="btn btn-primary" @onclick="SimulateSeason">Survivors ready? Go!</button>

<p>@result</p>

@code {
    private string result = string.Empty;

    private void SimulateSeason()
    {
        var response = _simulationService.Simulate(new SimulationRequest<SurvivorSeason>());

        if (response != null)
        {
            result = JsonConvert.SerializeObject(response);
        }
        else
        {
            result = "An unknown error occurred.";
        }
    }
}
