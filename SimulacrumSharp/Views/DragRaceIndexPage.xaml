<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SimulacrumSharp.Views.DragRaceIndexPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SimulacrumSharp.Views"
    Title="Drag Race Simulator"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid>
            <VerticalStackLayout
            VerticalOptions="CenterAndExpand"
            Padding="64"
            Spacing="64">
                <Label
                HorizontalOptions="Center"
                Text="Welcome to Drag Race!"
                TextColor="DeepPink"
                VerticalOptions="Center"/>

                <Label
                HorizontalOptions="Center"
                Text="Click the button below to Simulate Your Reality!"
                TextColor="DeepPink"
                VerticalOptions="Center"/>

                <Button
                HorizontalOptions="Center"
                Text="Racers, start your engines!"
                VerticalOptions="Center"
                Clicked="OnSimulate"/>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
