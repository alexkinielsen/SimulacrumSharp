<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SimulacrumSharp.Views.BigBrotherIndexPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SimulacrumSharp.ViewModels"
    xmlns:local="clr-namespace:SimulacrumSharp.Views"
    Title="Big Brother Simulator"
    mc:Ignorable="d">

    <ContentPage.Content>
        <VerticalStackLayout
            VerticalOptions="CenterAndExpand"
            Padding="64"
            Spacing="64">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to Big Brother!"
                TextColor="OrangeRed"
                VerticalOptions="Center"/>

            <Label
                HorizontalOptions="Center"
                Text="Click the button below to Simulate Your Reality!"
                TextColor="OrangeRed"
                VerticalOptions="Center"/>

            <Button
                HorizontalOptions="Center"
                Text="HouseGuests to the living room!"
                VerticalOptions="Center"
                Clicked="OnSimulate"/>

            <Label
                x:Name="SimulateResults"
                Text=""
                TextColor="Red"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
